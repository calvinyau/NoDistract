 {
  "manifest_version": 2,

  "name": "NoDistract",
  "description": "Block social media sites for designated periods of time so you can focus without distraction.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js", "jquery-3.0.0.min.js"],
    "persistent": true
  },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  // "content_scripts": [
  //   {
  //     "matches": ["http://*.facebook.com/*"],
  //     "js": ["jquery-3.0.0.min.js"]
  //   }
  // ],

  "permissions": [
   "tabs",
   "storage",
   "http://*/*",
   "https://*/*",
   "webNavigation"
   ]
 }

