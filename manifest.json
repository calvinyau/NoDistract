 {
  "manifest_version": 2,

  "name": "NoDistract",
  "description": "Block social media sites for designated periods of time so you can focus without distraction.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "permissions": [
   "tabs",
   "storage",
   "http://*/*",
   "https://*/*"
   ]
 }

